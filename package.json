{
    "name": "au-datatable",
    "version": "1.2.3",
    "description": "A highly customizable aurelia html datatable plugin",
    "keywords": [
        "aurelia",
        "table",
        "customizable",
        "plugin",
        "html",
        "datatable"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dtaalbers/au-datatable.git"
    },
    "author": "Tom Aalbers <dtaalbers@gmail.com>",
    "license": "MIT",
    "homepage": "https://github.com/dtaalbers/au-datatable",
    "bugs": {
        "url": "https://github.com/dtaalbers/au-datatable/issues"
    },
    "files": [
        "dist"
    ],
    "dependencies": {
        "aurelia": "latest"
    },
    "devDependencies": {
        "eslint": "^8.30.0",
        "@aurelia/testing": "latest",
        "htmlhint": "^1.1.4",
        "sass-lint": "^1.13.1",
        "rimraf": "^3.0.2",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1",
        "webpack-dev-server": "^4.11.1",
        "html-webpack-plugin": "^5.5.0",
        "webpack-bundle-analyzer": "^4.7.0",
        "style-loader": "^3.3.1",
        "css-loader": "^6.7.3",
        "dotenv-webpack": "^8.0.1",
        "@aurelia/webpack-loader": "latest",
        "ts-loader": "^9.4.2",
        "sass-loader": "^13.2.0",
        "sass": "^1.57.1",
        "postcss-loader": "^7.0.2",
        "postcss": "^8.4.20",
        "autoprefixer": "^10.4.13",
        "webpack-node-externals": "^3.0.0",
        "@types/node": "^18.11.18",
        "typescript": "^4.9.4",
        "tslib": "^2.4.1",
        "@typescript-eslint/eslint-plugin": "^5.47.1",
        "@typescript-eslint/parser": "^5.47.1"
    },
    "scripts": {
        "lint:js": "eslint src test --ext .js,.ts",
        "lint:css": "sass-lint -c .sass-lint.yml \"src/**/*.scss\"",
        "lint:html": "htmlhint -c .htmlhintrc src",
        "lint": "npm run lint:js && npm run lint:html && npm run lint:css",
        "start": "webpack serve",
        "build": "rimraf dist && webpack --env production",
        "analyze": "rimraf dist && webpack --env production --analyze",
        "prepare": "npm run build"
    }
}
